{
  "manifest_version": 3,
  "name": "Rate Management Helper - Enhanced",
  "version": "2.1",
  "description": "Assistant avanc√© pour la gestion des tarifs avec support JSON et interface moderne.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://rmsweb.prod.rms.hertz.io/RateManagement/RateEntry.aspx"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Rate Management Helper"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "config/*.json",
        "config-manager.html",
        "config-manager.js",
        "test-config-access.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
